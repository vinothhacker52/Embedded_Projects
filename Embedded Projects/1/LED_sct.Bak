/* Linker script for LPC2129 */

ENTRY(cpp_main)    /* Set the entry point to cpp_main */

/* Define memory regions */
MEMORY
{
    FLASH (rx) : ORIGIN = 0x00000000, LENGTH = 256K
    RAM (rwx) : ORIGIN = 0x40000000, LENGTH = 64K
}

/* Define the sections */
SECTIONS
{
    .text :
    {
        KEEP(*(.isr_vector))    /* Ensure the vector table is not removed */
        *(.text*)
        *(.rodata*)
        _etext = .;
    } > FLASH

    .data : AT(_etext)
    {
        _data = .;
        *(.data*)
        _edata = .;
    } > RAM

    .bss :
    {
        _bss = .;
        *(.bss*)
        *(COMMON)
        _ebss = .;
    } > RAM

    /* Define symbols for the stack top and heap base */
    ._user_stack :
    {
        . = ALIGN(8);
        PROVIDE(__stack = .);
    } > RAM

    ._heap :
    {
        . = ALIGN(8);
        PROVIDE(__heap_base = .);
        . = . + 0x2000; /* 8KB heap */
        PROVIDE(__heap_limit = .);
    } > RAM
}
